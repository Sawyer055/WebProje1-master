@model IEnumerable<EntityLayer.Concrete.Route>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Welcome, @User.Identity.Name!</h2>

    <form method="post" action="/Reservation/SelectRoute">
        <label for="selectedRoute">Select a Route:</label>
        <select id="selectedRoute" name="selectedRoute" required>
            <option value="">-- Select Route --</option>
            @foreach (var route in Model)
            {
                <option value="@route.RouteID">@route.TakeOff - @route.Landing</option>
            }
        </select>
        <button type="submit">Select</button>
    </form>

    

    

